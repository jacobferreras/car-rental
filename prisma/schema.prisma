generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id          Int      @id @default(autoincrement())
  make        String
  model       String
  description String   @default("No description")
  year        Int
  pricePerDay Decimal
  imageUrl    String?
  status      CarStatus  @default(AVAILABLE)
  transmission Transmission @default(MANUAL)
  fuelType     FuelType   @default(PETROL)
  type        CarType @default(SEDAN)
  engine              String?
  horsepower          Int?
  mileage             Int?
  color               String?
  frontImage          String?
  backImage           String?
  interiorImage       String?
  rearImage           String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

}



enum CarStatus {
  AVAILABLE
  RENTED
  MAINTENANCE
  UNAVAILABLE
}

enum FuelType {
  PETROL
  DIESEL
  ELECTRIC
  HYBRID
}

enum Transmission {
  MANUAL
  AUTOMATIC
}

enum CarType {
  SEDAN
  SUV
  HATCHBACK
  COUPE
  CONVERTIBLE
  PICKUP
  VAN
}
